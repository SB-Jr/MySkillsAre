<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <EditText
        android:id="@+id/firstnamelogin"
        android:hint="@string/firstnamedefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lastnamelogin"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/lastnamelogin"
        android:hint="@string/lastnamedefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailidlogin"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/emailidlogin"
        android:hint="@string/emailiddefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/warninglogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailidlogin"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_red_dark"/>
    <Button
        android:id="@+id/login"
        android:text="@string/loginbutton"
        android:onClick="login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/emailidlogin"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />
    <Button
        android:id="@+id/register"
        android:text="@string/registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login"
        android:layout_alignParentEnd="true"
        android:onClick="register"
        android:layout_marginEnd="39dp" />
</RelativeLayout>