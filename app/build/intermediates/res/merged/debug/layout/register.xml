<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">

    <EditText
        android:id="@+id/firstnameregister"
        android:hint="@string/firstnamedefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/lastnameregister"
        android:hint="@string/lastnamedefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/emailidregister"
        android:hint="@string/emailiddefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/locationregister"
        android:hint="@string/locationdefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/warningregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"/>
    <Button
        android:id="@+id/createprofile"
        android:text="@string/createprofilebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="createprofile"
        android:layout_gravity="center_horizontal" />

</LinearLayout>